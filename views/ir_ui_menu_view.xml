<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="menu_invis_groups_form_view" model="ir.ui.view">
        <field name="name">menu.invis.groups.form.view</field>
        <field name="model">ir.ui.menu</field>
        <field name="inherit_id" ref="base.edit_menu_access" />
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Invisible Groups">
                    <field name="invis_groups_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>